<h1>photo_show</h1>

<p>内容: <%= @photo.content %></p>
<strong>Image:</strong>
<%= image_tag @photo.image.url %>

<p><% unless @photo.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(photo_id: @photo.id), method: :post, class: 'btn btn-primary' %>
  <% end %></p>
<% end %>